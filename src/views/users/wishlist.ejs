<!DOCTYPE html>
<html lang="vi" class="scroll-smooth">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sản phẩm yêu thích | CHRONOS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Sora:wght@300;400;500;600&family=Space+Grotesk:wght@300;400;500;600&display=swap"
        rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <style>
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #070A12;
        }

        ::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 3px;
        }

        .glass-panel {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.08);
        }
    </style>
    <script>
        tailwind.config = { theme: { extend: { colors: { dark: '#070A12', navy: '#0B1020', gold: '#D6B25E', cyan: '#22D3EE', offwhite: '#EAEAF0', muted: '#9AA3B2' }, fontFamily: { sans: ['Inter', 'sans-serif'], display: ['Sora', 'sans-serif'], mono: ['Space Grotesk', 'monospace'] } } } }
    </script>
</head>

<body class="bg-dark text-offwhite font-sans antialiased">
    <%- include('../partials/header') %>

        <section class="pt-32 pb-8 bg-navy">
            <div class="container mx-auto px-6">
                <h1 class="text-3xl md:text-4xl font-display font-semibold text-white">Sản phẩm yêu thích</h1>
                <p class="text-muted mt-2">Danh sách các sản phẩm bạn đã lưu</p>
            </div>
        </section>

        <section class="py-12 bg-dark min-h-[60vh]">
            <div class="container mx-auto px-6">
                <div class="grid lg:grid-cols-4 gap-8">

                    <!-- Sidebar -->
                    <div class="lg:col-span-1">
                        <div class="glass-panel rounded-2xl p-6 sticky top-32">
                            <div class="text-center mb-6">
                                <div
                                    class="w-20 h-20 bg-gold/20 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <iconify-icon icon="lucide:user" class="text-gold text-3xl"></iconify-icon>
                                </div>
                                <h3 class="text-white font-medium">
                                    <%= user.name %>
                                </h3>
                                <p class="text-muted text-sm">
                                    <%= user.email %>
                                </p>
                            </div>
                            <nav class="space-y-2">
                                <a href="/users/profile"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-muted hover:text-white hover:bg-white/5 transition-colors">
                                    <iconify-icon icon="lucide:user-circle"></iconify-icon>Thông tin tài khoản
                                </a>
                                <a href="/users/orders"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-muted hover:text-white hover:bg-white/5 transition-colors">
                                    <iconify-icon icon="lucide:package"></iconify-icon>Đơn hàng
                                </a>
                                <a href="/users/wishlist"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gold/10 text-gold">
                                    <iconify-icon icon="lucide:heart"></iconify-icon>Yêu thích
                                </a>
                                <a href="/users/addresses"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-muted hover:text-white hover:bg-white/5 transition-colors">
                                    <iconify-icon icon="lucide:map-pin"></iconify-icon>Địa chỉ
                                </a>
                                <div class="border-t border-white/10 my-4"></div>
                                <a href="/auth/logout"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 transition-colors">
                                    <iconify-icon icon="lucide:log-out"></iconify-icon>Đăng xuất
                                </a>
                            </nav>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="lg:col-span-3">

                        <% if (products && products.length> 0) { %>
                            <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-6">
                                <% products.forEach(function(product) { %>
                                    <div class="group" id="wishlist-item-<%= product._id %>">
                                        <div
                                            class="bg-navy/40 rounded-xl overflow-hidden border border-white/5 relative">
                                            <% if (product.salePrice) { %>
                                                <div class="absolute top-3 left-3 z-10">
                                                    <% var discountPct=Math.round((1 - product.salePrice /
                                                        product.price) * 100); %>
                                                        <span
                                                            class="bg-red-500/90 text-white text-[10px] font-bold px-2 py-1 rounded uppercase">-
                                                            <%= discountPct %>%
                                                        </span>
                                                </div>
                                                <% } %>
                                                    <button onclick="removeFromWishlist('<%= product._id %>')"
                                                        class="absolute top-3 right-3 z-10 w-8 h-8 bg-red-500/20 rounded-full flex items-center justify-center text-red-400 hover:bg-red-500/40 transition-colors">
                                                        <iconify-icon icon="lucide:x" width="16"></iconify-icon>
                                                    </button>
                                                    <div class="relative aspect-[4/5] bg-[#121620] overflow-hidden">
                                                        <a href="/products/<%= product.slug %>">
                                                            <img src="<%= product.primaryImage || '/images/no-image.png' %>"
                                                                alt="<%= product.name %>"
                                                                class="w-full h-full object-cover group-hover:scale-105 transition-all duration-500">
                                                        </a>
                                                        <div
                                                            class="absolute inset-x-0 bottom-4 px-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300 flex gap-2">
                                                            <button onclick="addToCart('<%= product._id %>')"
                                                                class="flex-1 bg-white text-dark py-2.5 text-xs font-bold uppercase rounded hover:bg-gold transition-colors">Thêm
                                                                vào giỏ</button>
                                                        </div>
                                                    </div>
                                                    <div class="p-5">
                                                        <span
                                                            class="text-gold text-xs font-medium uppercase tracking-wider">
                                                            <%= product.brand %>
                                                        </span>
                                                        <a href="/products/<%= product.slug %>">
                                                            <h3
                                                                class="text-white font-medium text-lg mt-1 mb-2 group-hover:text-gold transition-colors line-clamp-2">
                                                                <%= product.name %>
                                                            </h3>
                                                        </a>
                                                        <div class="flex items-center gap-3">
                                                            <% if (product.salePrice) { %>
                                                                <span class="text-gold font-mono font-medium">
                                                                    <%= product.salePrice.toLocaleString('vi-VN') %>₫
                                                                </span>
                                                                <span class="text-muted text-sm line-through">
                                                                    <%= product.price.toLocaleString('vi-VN') %>₫
                                                                </span>
                                                                <% } else { %>
                                                                    <span class="text-gold font-mono font-medium">
                                                                        <%= product.price.toLocaleString('vi-VN') %>₫
                                                                    </span>
                                                                    <% } %>
                                                        </div>
                                                    </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                            <% } else { %>
                                <div class="glass-panel rounded-2xl p-12 text-center">
                                    <iconify-icon icon="lucide:heart-off" width="64"
                                        class="text-muted mb-6"></iconify-icon>
                                    <h3 class="text-2xl font-display font-medium text-white mb-4">Chưa có sản phẩm yêu
                                        thích</h3>
                                    <p class="text-muted mb-8">Hãy thêm sản phẩm yêu thích để dễ dàng theo dõi!</p>
                                    <a href="/products"
                                        class="inline-flex items-center gap-2 bg-gold hover:bg-[#C5A354] text-dark font-bold py-4 px-8 rounded text-sm uppercase tracking-wide">
                                        <iconify-icon icon="lucide:shopping-bag"></iconify-icon>Khám phá sản phẩm
                                    </a>
                                </div>
                                <% } %>

                    </div>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
            <script src="/js/main.js"></script>
            <script>
                function removeFromWishlist(productId) {
                    fetch('/users/wishlist/' + productId, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' }
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                document.getElementById('wishlist-item-' + productId).remove();
                                // Check if empty
                                if (document.querySelectorAll('[id^="wishlist-item-"]').length === 0) {
                                    location.reload();
                                }
                            }
                        });
                }

                function addToCart(productId) {
                    fetch('/cart/add', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ productId, quantity: 1 })
                    })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                alert('Đã thêm vào giỏ hàng!');
                            }
                        });
                }
            </script>
</body>

</html>