<!-- Best Sellers -->
<section id="shop" class="py-24 bg-[#080C15] border-t border-white/5">
    <div class="container mx-auto px-6">
        <div class="flex justify-between items-end mb-12">
            <div>
                <h2 class="text-3xl md:text-4xl font-display font-semibold text-white mb-2">Best Sellers</h2>
                <p class="text-muted text-sm">Lựa chọn hàng đầu của quý ông.</p>
            </div>
            <a href="/products?sort=bestseller"
                class="hidden md:flex items-center gap-2 text-sm text-white hover:text-gold transition-colors">Xem tất
                cả <iconify-icon icon="lucide:arrow-right" width="16"></iconify-icon></a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <% if (typeof featuredProducts !=='undefined' && featuredProducts.length> 0) { %>
                <% featuredProducts.slice(0, 4).forEach(function(product) { %>
                    <div class="group">
                        <div class="bg-navy/40 rounded-xl overflow-hidden border border-white/5 relative">
                            <% if (product.isNewArrival) { %>
                                <div class="absolute top-3 left-3 z-10"><span
                                        class="bg-cyan/10 text-cyan text-[10px] font-bold px-2 py-1 rounded border border-cyan/20 uppercase">New</span>
                                </div>
                                <% } %>
                                    <div class="relative aspect-[4/5] bg-[#121620] overflow-hidden">
                                        <a href="/products/<%= product.slug %>">
                                            <img src="<%= product.primaryImage || '/images/no-image.png' %>"
                                                class="w-full h-full object-cover group-hover:scale-105 transition-all duration-500">
                                        </a>
                                        <div
                                            class="absolute inset-x-0 bottom-4 px-4 translate-y-full group-hover:translate-y-0 transition-transform duration-300 flex gap-2">
                                            <button onclick="addToCart('<%= product._id %>')"
                                                class="flex-1 bg-white text-dark py-2.5 text-xs font-bold uppercase rounded shadow-lg hover:bg-gold transition-colors">Thêm
                                                vào giỏ</button>
                                            <a href="/products/<%= product.slug %>"
                                                class="w-10 bg-dark/80 text-white flex items-center justify-center rounded border border-white/10 hover:text-gold"><iconify-icon
                                                    icon="lucide:eye"></iconify-icon></a>
                                        </div>
                                    </div>
                                    <div class="p-5">
                                        <a href="/products/<%= product.slug %>">
                                            <h3
                                                class="text-white font-medium text-lg mb-1 group-hover:text-gold transition-colors">
                                                <%= product.name %>
                                            </h3>
                                        </a>
                                        <div class="flex justify-between items-center">
                                            <span class="text-muted text-sm">
                                                <%= product.brand %>
                                            </span>
                                            <span class="text-gold font-mono font-medium">
                                                <%= (product.salePrice || product.price).toLocaleString('vi-VN') %>₫
                                            </span>
                                        </div>
                                    </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="col-span-4 text-center py-20 text-muted">
                                <iconify-icon icon="lucide:watch" width="48" class="mb-4 opacity-50"></iconify-icon>
                                <p>Chưa có sản phẩm nào</p>
                            </div>
                            <% } %>
        </div>
    </div>
</section>

