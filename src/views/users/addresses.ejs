<!DOCTYPE html>
<html lang="vi" class="scroll-smooth">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sổ địa chỉ | CHRONOS</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Sora:wght@300;400;500;600&family=Space+Grotesk:wght@300;400;500;600&display=swap"
        rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"></script>
    <style>
        ::-webkit-scrollbar {
            width: 6px;
        }

        ::-webkit-scrollbar-track {
            background: #070A12;
        }

        ::-webkit-scrollbar-thumb {
            background: #333;
            border-radius: 3px;
        }

        .glass-panel {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.08);
        }
    </style>
    <script>
        tailwind.config = { theme: { extend: { colors: { dark: '#070A12', navy: '#0B1020', gold: '#D6B25E', cyan: '#22D3EE', offwhite: '#EAEAF0', muted: '#9AA3B2' }, fontFamily: { sans: ['Inter', 'sans-serif'], display: ['Sora', 'sans-serif'], mono: ['Space Grotesk', 'monospace'] } } } }
    </script>
</head>

<body class="bg-dark text-offwhite font-sans antialiased">
    <%- include('../partials/header') %>

        <section class="pt-32 pb-8 bg-navy">
            <div class="container mx-auto px-6">
                <h1 class="text-3xl md:text-4xl font-display font-semibold text-white">Sổ địa chỉ</h1>
                <p class="text-muted mt-2">Quản lý địa chỉ giao hàng của bạn</p>
            </div>
        </section>

        <section class="py-12 bg-dark min-h-[60vh]">
            <div class="container mx-auto px-6">
                <div class="grid lg:grid-cols-4 gap-8">

                    <!-- Sidebar -->
                    <div class="lg:col-span-1">
                        <div class="glass-panel rounded-2xl p-6 sticky top-32">
                            <div class="text-center mb-6">
                                <div
                                    class="w-20 h-20 bg-gold/20 rounded-full flex items-center justify-center mx-auto mb-4">
                                    <iconify-icon icon="lucide:user" class="text-gold text-3xl"></iconify-icon>
                                </div>
                                <h3 class="text-white font-medium">
                                    <%= user.name %>
                                </h3>
                                <p class="text-muted text-sm">
                                    <%= user.email %>
                                </p>
                            </div>
                            <nav class="space-y-2">
                                <a href="/users/profile"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-muted hover:text-white hover:bg-white/5 transition-colors">
                                    <iconify-icon icon="lucide:user-circle"></iconify-icon>Thông tin tài khoản
                                </a>
                                <a href="/users/orders"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-muted hover:text-white hover:bg-white/5 transition-colors">
                                    <iconify-icon icon="lucide:package"></iconify-icon>Đơn hàng
                                </a>
                                <a href="/users/wishlist"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-muted hover:text-white hover:bg-white/5 transition-colors">
                                    <iconify-icon icon="lucide:heart"></iconify-icon>Yêu thích
                                </a>
                                <a href="/users/addresses"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg bg-gold/10 text-gold">
                                    <iconify-icon icon="lucide:map-pin"></iconify-icon>Địa chỉ
                                </a>
                                <div class="border-t border-white/10 my-4"></div>
                                <a href="/auth/logout"
                                    class="flex items-center gap-3 px-4 py-3 rounded-lg text-red-400 hover:bg-red-500/10 transition-colors">
                                    <iconify-icon icon="lucide:log-out"></iconify-icon>Đăng xuất
                                </a>
                            </nav>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="lg:col-span-3 space-y-8">

                        <% if (typeof success_msg !=='undefined' && success_msg && success_msg.length> 0) { %>
                            <div class="bg-green-500/10 border border-green-500/30 rounded-lg p-4">
                                <p class="text-green-400 text-sm">
                                    <%= success_msg %>
                                </p>
                            </div>
                            <% } %>

                                <!-- Add Address Form -->
                                <div class="glass-panel rounded-2xl p-8">
                                    <h2
                                        class="text-xl font-display font-medium text-white mb-6 flex items-center gap-3">
                                        <iconify-icon icon="lucide:plus-circle" class="text-gold"></iconify-icon>Thêm
                                        địa chỉ mới
                                    </h2>
                                    <form action="/users/addresses" method="POST" class="space-y-6">
                                        <div class="grid md:grid-cols-2 gap-6">
                                            <div>
                                                <label class="block text-sm text-muted mb-2">Họ và tên người
                                                    nhận</label>
                                                <input type="text" name="name" required
                                                    class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:border-gold outline-none">
                                            </div>
                                            <div>
                                                <label class="block text-sm text-muted mb-2">Số điện thoại</label>
                                                <input type="tel" name="phone" required
                                                    class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:border-gold outline-none">
                                            </div>
                                        </div>
                                        <div>
                                            <label class="block text-sm text-muted mb-2">Địa chỉ</label>
                                            <input type="text" name="address" required
                                                class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:border-gold outline-none"
                                                placeholder="Số nhà, tên đường">
                                        </div>
                                        <div class="grid md:grid-cols-3 gap-6">
                                            <div>
                                                <label class="block text-sm text-muted mb-2">Tỉnh/Thành phố</label>
                                                <input type="text" name="city" required
                                                    class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:border-gold outline-none">
                                            </div>
                                            <div>
                                                <label class="block text-sm text-muted mb-2">Quận/Huyện</label>
                                                <input type="text" name="district" required
                                                    class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:border-gold outline-none">
                                            </div>
                                            <div>
                                                <label class="block text-sm text-muted mb-2">Phường/Xã</label>
                                                <input type="text" name="ward" required
                                                    class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:border-gold outline-none">
                                            </div>
                                        </div>
                                        <div class="flex items-center gap-3">
                                            <input type="checkbox" name="isDefault" id="isDefault"
                                                class="w-5 h-5 rounded border-white/20 bg-dark text-gold focus:ring-gold">
                                            <label for="isDefault" class="text-muted text-sm">Đặt làm địa chỉ mặc
                                                định</label>
                                        </div>
                                        <button type="submit"
                                            class="bg-gold hover:bg-[#C5A354] text-dark font-bold py-3 px-8 rounded-lg text-sm uppercase tracking-wide">
                                            Thêm địa chỉ
                                        </button>
                                    </form>
                                </div>

                                <!-- Address List -->
                                <div class="glass-panel rounded-2xl p-8">
                                    <h2
                                        class="text-xl font-display font-medium text-white mb-6 flex items-center gap-3">
                                        <iconify-icon icon="lucide:map-pin" class="text-gold"></iconify-icon>Địa chỉ đã
                                        lưu
                                    </h2>

                                    <% if (addresses && addresses.length> 0) { %>
                                        <div class="space-y-4">
                                            <% addresses.forEach(function(addr) { %>
                                                <div class="bg-dark rounded-xl p-6 border border-white/5 relative"
                                                    id="address-<%= addr._id %>">
                                                    <% if (addr.isDefault) { %>
                                                        <span
                                                            class="absolute top-4 right-4 bg-gold/20 text-gold text-xs font-medium px-2 py-1 rounded">Mặc
                                                            định</span>
                                                        <% } %>
                                                            <div class="flex items-start gap-4">
                                                                <div
                                                                    class="w-10 h-10 bg-gold/10 rounded-full flex items-center justify-center flex-shrink-0">
                                                                    <iconify-icon icon="lucide:map-pin"
                                                                        class="text-gold"></iconify-icon>
                                                                </div>
                                                                <div class="flex-1">
                                                                    <h4 class="text-white font-medium">
                                                                        <%= addr.name %>
                                                                    </h4>
                                                                    <p class="text-muted text-sm">
                                                                        <%= addr.phone %>
                                                                    </p>
                                                                    <p class="text-muted text-sm mt-2">
                                                                        <%= addr.address %>, <%= addr.ward %>, <%=
                                                                                    addr.district %>, <%= addr.city %>
                                                                    </p>
                                                                </div>
                                                                <button onclick="removeAddress('<%= addr._id %>')"
                                                                    class="text-red-400 hover:text-red-300">
                                                                    <iconify-icon icon="lucide:trash-2"
                                                                        width="18"></iconify-icon>
                                                                </button>
                                                            </div>
                                                </div>
                                                <% }); %>
                                        </div>
                                        <% } else { %>
                                            <div class="text-center py-12">
                                                <iconify-icon icon="lucide:map-pin-off" width="48"
                                                    class="text-muted mb-4"></iconify-icon>
                                                <p class="text-muted">Bạn chưa có địa chỉ nào được lưu</p>
                                            </div>
                                            <% } %>
                                </div>

                    </div>
                </div>
            </div>
        </section>

        <%- include('../partials/footer') %>
            <script src="/js/main.js"></script>
            <script>
                function removeAddress(addressId) {
                    if (confirm('Bạn có chắc muốn xóa địa chỉ này?')) {
                        fetch('/users/addresses/' + addressId, {
                            method: 'DELETE',
                            headers: { 'Content-Type': 'application/json' }
                        })
                            .then(res => res.json())
                            .then(data => {
                                if (data.success) {
                                    document.getElementById('address-' + addressId).remove();
                                } else {
                                    alert(data.message || 'Có lỗi xảy ra');
                                }
                            });
                    }
                }
            </script>
</body>

</html>